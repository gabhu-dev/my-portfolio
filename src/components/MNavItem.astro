---
interface Props {
  href: string;
}

const { href } = Astro.props;
const { pathname } = Astro.url;

// Check if active (stripping trailing slash for comparison)
const isActive =
  pathname === href ||
  (pathname !== "/" && pathname.replace(/\/$/, "") === href);
---

<a href={href} class:list={["nav-item", { "nav-item--active": isActive }]}>
  <slot />
</a>

<style>
  @reference "tailwindcss";

  .nav-item {
    @apply text-gray-950 font-medium text-sm px-1 cursor-pointer transition-colors hover:text-indigo-400;
  }

  .nav-item--active {
    @apply text-indigo-600 border-b-2 border-indigo-600;
  }
</style>
