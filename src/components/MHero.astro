<script>
  const buttonDownloadCV = document.getElementById("button-download-cv");

  function downloadCV() {
    const link = document.createElement("a");
    link.href = "/files/CV.pdf";
    link.download = "CV-Gabriela.pdf";
    link.click();
  }
  buttonDownloadCV?.addEventListener("click", downloadCV);
</script>

