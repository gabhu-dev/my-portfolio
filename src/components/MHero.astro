<style>
  @reference "tailwindcss";

  .hero {
    @apply relative overflow-hidden min-h-[80vh] flex items-center justify-center bg-white;
  }

  .hero__content {
    @apply relative z-10 flex flex-col items-center text-center max-w-4xl px-6;
  }

  .avatar {
    @apply w-32 h-32 rounded-full p-2 bg-pink-100 flex items-center justify-center mb-6;
  }

  .avatar__img {
    @apply w-full h-full rounded-full object-cover;
  }

  .hero__greeting {
    @apply text-xl font-bold text-gray-900 mb-1;
  }

  .hero__role {
    @apply text-gray-500 mb-4 font-medium;
  }

  .hero__socials {
    @apply flex gap-4 mb-8 justify-center;
  }

  .social-icon {
    @apply text-gray-900 hover:text-indigo-600 transition-colors;
  }

  .hero__headline {
    @apply text-4xl md:text-5xl font-extrabold text-gray-950 mb-6 leading-tight;
  }

  .hero__description {
    @apply text-lg text-gray-600 mb-10 max-w-2xl leading-relaxed;
  }

  .hero__actions {
    @apply flex flex-col sm:flex-row gap-4;
  }

  /* Decorative dots */
  .dot {
    @apply absolute rounded-full blur-sm opacity-60;
  }

  .dot--blue-left {
    @apply w-4 h-4 bg-blue-200 top-[15%] left-[10%];
  }
  .dot--purple-left {
    @apply w-5 h-5 bg-purple-200 top-[30%] left-[5%];
  }
  .dot--yellow-left {
    @apply w-4 h-4 bg-yellow-100 top-[50%] left-[12%];
  }
  .dot--pink-left {
    @apply w-3 h-3 bg-pink-200 top-[70%] left-[8%];
  }

  .dot--pink-right {
    @apply w-4 h-4 bg-pink-200 top-[10%] right-[15%];
  }
  .dot--purple-right {
    @apply w-3 h-3 bg-purple-200 top-[25%] right-[10%];
  }
  .dot--blue-right {
    @apply w-5 h-5 bg-blue-200 top-[55%] right-[12%];
  }
  .dot--yellow-right {
    @apply w-4 h-4 bg-yellow-100 top-[45%] right-[5%];
  }
</style>
