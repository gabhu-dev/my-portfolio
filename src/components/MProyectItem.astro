---
import { ArrowRightIcon } from "@lucide/astro";

interface Props {
  slug: string;
  title: string;
  image: ImageMetadata;
}

const { slug, title, image } = Astro.props;
---

<a href={`/proyects/${slug}`} class="proyect__item">
  <img src={image.src} alt={title} />
  <div class="proyect__item-title">
    <h3>{title}</h3>
    <ArrowRightIcon size={20} />
  </div>
</a>

<style>
  @reference "tailwindcss";

  .proyect__item {
    @apply w-full;
  }
  .proyect__item-title {
    @apply p-5 text-xl font-semibold flex justify-between;
  }
</style>
